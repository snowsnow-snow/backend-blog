            "url": "/blog/api/posts",
            "sort": 10,
            "request": {
                "body": {
                    "mode": "json",
                    "raw": "{\n  \"postType\": \"article\",\n  \"title\": \"My New Post\",\n  \"slug\": \"my-new-post\",\n  \"summary\": \"Summary\",\n  \"content\": \"# Content\",\n  \"status\": \"published\",\n  \"mediaAssets\": []\n}"
                }
            }
        },
        {
            "target_id": "api_update_post",
            "project_id": "my-blog-backend",
            "parent_id": "folder_posts_admin",
            "target_type": "api",
            "name": "Update Post",
            "method": "PUT",
            "url": "/blog/api/posts/1",
            "sort": 20,
            "request": {
                "body": {
                    "mode": "json",
                    "raw": "{\n  \"title\": \"Updated Title\",\n  \"content\": \"Updated Content\"\n}"
                }
            }
        },
        {
            "target_id": "api_list_posts_admin",
            "project_id": "my-blog-backend",
            "parent_id": "folder_posts_admin",
            "target_type": "api",
            "name": "List Posts (Full Info)",
            "method": "GET",
            "url": "/blog/api/posts",
            "sort": 30
        },
        {
            "target_id": "api_get_post_admin",
            "project_id": "my-blog-backend",
            "parent_id": "folder_posts_admin",
            "target_type": "api",
            "name": "Get Post (Full Info)",
            "method": "GET",
            "url": "/blog/api/posts/1",
            "sort": 40
        },
        {
            "target_id": "api_delete_post",
            "project_id": "my-blog-backend",
            "parent_id": "folder_posts_admin",
            "target_type": "api",
            "name": "Delete Post",
            "method": "DELETE",
            "url": "/blog/api/posts/1",
            "sort": 50
        },
        {
            "target_id": "folder_media",
            "project_id": "my-blog-backend",
            "parent_id": "0",
            "target_type": "folder",
            "name": "Media",
            "sort": 40
        },
        {
            "target_id": "api_upload_media",
            "project_id": "my-blog-backend",
            "parent_id": "folder_media",
            "target_type": "api",
            "name": "Upload Media",
            "method": "POST",
            "url": "/blog/api/upload",
            "sort": 10,
            "request": {
                "body": {
                    "mode": "form-data",
                    "parameter": [
                        {
                            "key": "file",
                            "field_type": "file",
                            "description": "Upload File"
                        },
                        {
                            "key": "postId",
                            "value": "1",
                            "description": "Optional Post ID"
                        }
                    ]
                }
            }
        }
