#!/bin/bash

# 源文件夹
SOURCE_DIR="/Users/snowsnowsnow/BlogList/1"
# 目标文件夹
TARGET_DIR="/Users/snowsnowsnow/BlogList/1"

# 检查源文件夹是否存在
if [ ! -d "$SOURCE_DIR" ]; then
    echo "源文件夹 $SOURCE_DIR 不存在"
    exit 1
fi

# 创建目标文件夹（如果不存在）
mkdir -p "$TARGET_DIR"

# 遍历源文件夹中的所有子文件夹
for dir in "$SOURCE_DIR"/*/; do
    # 确保它是一个文件夹
    if [ -d "$dir" ]; then
        # 移动子文件夹中的所有文件到目标文件夹
        mv "$dir"* "$TARGET_DIR"
    fi
done

echo "文件移动完成"